<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Stock Picking Log Tree View -->
        <record id="view_stock_picking_log_tree" model="ir.ui.view">
            <field name="name">stock.picking.log.tree</field>
            <field name="model">stock.picking.log</field>
            <field name="arch" type="xml">
                <tree string="Audit Logs" create="0" edit="0" delete="0">
                    <field name="timestamp"/>
                    <field name="user_id"/>
                    <field name="event_type"/>
                    <field name="barcode"/>
                    <field name="reason_code"/>
                    <field name="details"/>
                </tree>
            </field>
        </record>

        <!-- Inherit Stock Picking Form to Log Tab -->
        <record id="view_picking_form_inherit_bayani" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.bayani</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Audit Logs" name="audit_logs">
                        <field name="audit_log_ids" readonly="1">
                            <tree>
                                <field name="timestamp"/>
                                <field name="user_id"/>
                                <field name="event_type"/>
                                <field name="barcode"/>
                                <field name="reason_code"/>
                                <field name="details"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
