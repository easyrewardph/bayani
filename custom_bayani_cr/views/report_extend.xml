<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        INVOICE-->
        <template id="report_invoice_document_custom" inherit_id="account.report_invoice_document">
            <xpath expr="//div[hasclass('row')][1]/t/div[1]" position="replace">
                <!--                ADDRESS PART-->
                <div class="col-6">
                    <t t-set="information_block">
                        <div groups="account.group_delivery_invoice_address" name="shipping_address_block">
                            <strong>Deliver To:</strong>
                            <div t-field="o.partner_shipping_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        </div>
                    </t>
                </div>
            </xpath>
            <xpath expr="//tbody" position="before">
                <t t-set="counter" t-value="o.check_font_limit()"/>
            </xpath>
            <xpath expr="//t[@t-set='lines']" position="after">
                <t t-set="lines" t-value="o.reorder_lines(lines)"/>
            </xpath>
            <xpath expr="//div[hasclass('row')][1]/t/div[2]" position="replace">
                <div class="col-6" name="address_not_same_as_shipping">
                    <t t-set="address">
                        <strong>Invoice To:</strong>
                        <address class="mb-0" t-field="o.partner_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <div t-if="o.partner_id.vat" id="partner_vat_address_not_same_as_shipping">
                            <t t-if="o.company_id.account_fiscal_country_id.vat_label"
                               t-out="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                            <t t-else="">Tax ID</t>:
                            <span t-field="o.partner_id.vat"/>
                        </div>
                    </t>
                </div>
            </xpath>
            <xpath expr="//div[@name='address_same_as_shipping']" position="replace">
                <div class="offset-col-6 col-6" name="address_same_as_shipping">
                    <t t-set="address">
                        <strong>Deliver To:</strong>
                        <address class="mb-0" t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <div t-if="o.partner_id.vat" id="partner_vat_address_same_as_shipping">
                            <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-out="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                            <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/>
                        </div>
                    </t>
                </div>
            </xpath>
            <!--            PRODUCT LINES-->
<!--            <xpath expr="//td[@name='account_invoice_line_name']" position="replace">-->
<!--                <td name="account_invoice_line_name">-->
<!--                    <t t-if="counter > 0">-->
<!--                        <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"-->
<!--                              style="font-size:12px;">Bacon Burger-->
<!--                        </span>-->
<!--                    </t>-->
<!--                    <t t-else="">-->
<!--                        <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">Bacon Burger</span>-->
<!--                    </t>-->
<!--                </td>-->
<!--            </xpath>-->
            <xpath expr="//thead" position="replace">
                <thead>
                    <tr>
                        <th name="th_description" class="text-start"><span>Description</span></th>
                        <th name="th_expiry_date" class="text-end text-nowrap">Expiry Date</th>
                        <th name="th_quantity" class="text-end"><span>Quantity</span></th>
                        <th name="th_priceunit" t-attf-class="text-end text-nowrap {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                        <th name="th_box_price" class="text-end text-nowrap">Box Price</th>
                        <th name="th_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_taxes" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                        <th name="th_subtotal" class="text-end">
                            <span>Amount</span>
                        </th>
                    </tr>
                </thead>
            </xpath>
            <xpath expr="//t[@t-foreach='lines']/tr[1]" position="replace">
                <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                    <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                        <td name="account_invoice_line_name">
                            <t t-if="counter > 0">
                                <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"
                                      style="font-size:12px;">Bacon Burger
                                </span>
                            </t>
                            <t t-else="">
                                <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">Bacon Burger</span>
                            </t>
                        </td>
                        <t t-set="exp" t-value="line.get_expiry_date()"/>
    <!--                    style="font-size:12px;" -->
                        <td name="td_expiry_date" class="text-end">
                            <t t-if="counter > 0">
                                <span t-esc="exp" style="font-size:12px;" t-options='{"widget": "date"}'> -</span>
                            </t>
                            <t t-else="">
                                <span t-esc="exp" t-options='{"widget": "date"}'>-</span>
                            </t>
                        </td>
                        <td name="td_quantity" class="text-end text-nowrap">
                            <t t-if="counter > 0">
                                <span t-field="line.quantity" style="font-size:12px;">3.00</span>
                                <span t-field="line.product_uom_id" groups="uom.group_uom" style="font-size:12px;">units</span>
                            </t>
                            <t t-else="">
                                <span t-field="line.quantity">3.00</span>
                                <span t-field="line.product_uom_id" groups="uom.group_uom">units</span>
                            </t>
                        </td>
                        <td name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <t t-if="counter > 0">
                                <span class="text-nowrap" t-field="line.product_id.base_unit_price" style="font-size:12px;">9.00</span>
                            </t>
                            <t t-else="">
                                <span class="text-nowrap" t-field="line.product_id.base_unit_price">9.00</span>
                            </t>
                        </td>
                        <t t-set="t" t-value="round(line.price_unit * line.quantity,2)"/>
                        <td name="td_box_price" t-attf-class="text-end">
                            <t t-if="counter > 0">
                                <span class="text-nowrap" t-field="line.price_unit" style="font-size:12px;">9.00</span>
                            </t>
                            <t t-else="">
                                <span class="text-nowrap" t-field="line.price_unit">9.00</span>
                            </t>
                        </td>
                        <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <t t-if="counter > 0">
                                <span class="text-nowrap" t-field="line.discount" style="font-size:12px;">0</span>
                            </t>
                            <t t-else="">
                                <span class="text-nowrap" t-field="line.discount">0</span>
                            </t>
                        </td>
                        <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_ids])"/>
                        <td name="td_taxes" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                            <t t-if="counter > 0">
                                <span t-out="taxes" id="line_tax_ids" style="font-size:12px;">Tax 15%</span>
                            </t>
                            <t t-else="">
                                <span t-out="taxes" id="line_tax_ids">Tax 15%</span>
                            </t>

                        </td>
                        <td name="td_subtotal" class="text-end o_price_total">
                            <t t-if="counter > 0">
                                <span class="text-nowrap" t-field="line.price_subtotal" style="font-size:12px;">27.00</span>
                            </t>
                            <t t-else="">
                                <span class="text-nowrap" t-field="line.price_subtotal">27.00</span>
                            </t>

                        </td>
                    </t>
                    <t t-elif="line.display_type == 'line_section'">
                        <td colspan="99">
                            <t t-if="counter > 0">
                                <span t-field="line.name" t-options="{'widget': 'text'}" style="font-size:12px;">A section title</span>
                            </t>
                            <t t-else="">
                                <span t-field="line.name" t-options="{'widget': 'text'}">A section title</span>
                            </t>

                        </td>
                        <t t-set="current_section" t-value="line"/>
                        <t t-set="current_subtotal" t-value="0"/>
                    </t>
                    <t t-elif="line.display_type == 'line_note'">
                        <td colspan="99">
                            <t t-if="counter > 0">
                                <span t-field="line.name" t-options="{'widget': 'text'}" style="font-size:12px;">A note, whose content usually applies to the section or product above.</span>
                            </t>
                            <t t-else="">
                                <span t-field="line.name" t-options="{'widget': 'text'}">A note, whose content usually applies to the section or product above.</span>
                            </t>
                        </td>
                    </t>
                </tr>

            </xpath>
            <xpath expr="//t[@t-foreach='lines']" position="after">
                <tr>
                    <td colspan="2"></td>
                    <td><span>Total Box: = </span><span t-esc="sum(lines.mapped('quantity'))"/> </td>
                    <td colspan="4" style="padding: 0; border: none;">
                    <style>
                        .no-border-table,
                        .no-border-table td,
                        .no-border-table th,
                        .no-border-table tr {
                            border: none !important;
                            outline: none !important;
                            box-shadow: none !important;
                        }

                        .no-border-table {
                            border-collapse: collapse !important;
                            width: 100%;
                        }
                        .no-border-table td {
                            padding: 6px 10px !important; /* top-bottom, left-right */
                        }
                    </style>

                    <table class="no-border-table">
                        <t t-if="o.tax_totals">
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-set="currency" t-value="o.currency_id"/>
                            <t t-set="same_tax_base" t-value="tax_totals['same_tax_base']"/>
                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                <tr class="o_subtotal">
                                    <td>
                                        <span t-out="subtotal['name']"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-out="subtotal['base_amount_currency']"
                                              t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                    </td>
                                </tr>
                                <t t-foreach="subtotal['tax_groups']" t-as="tax_group">
                                    <tr class="o_taxes">
                                        <t t-if="same_tax_base or tax_group['display_base_amount_currency'] is None">
                                            <td>
                                                <span class="text-nowrap" t-out="tax_group['group_name']"/>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-nowrap"
                                                      t-out="tax_group['tax_amount_currency']"
                                                      t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-out="tax_group['group_name']"/> on
                                                <span class="text-nowrap"
                                                      t-out="tax_group['display_base_amount_currency']"
                                                      t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-nowrap"
                                                      t-out="tax_group['tax_amount_currency']"
                                                      t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </t>

                            <tr t-if="'cash_rounding_base_amount_currency' in tax_totals">
                                <td>Rounding</td>
                                <td class="text-end">
                                    <span t-out="tax_totals['cash_rounding_base_amount_currency']"
                                          t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                </td>
                            </tr>

                            <tr style="background-color:#dc3545;color:white !important;">
                                <td><strong>Total</strong></td>
                                <td class="text-end">
                                    <strong t-out="tax_totals['total_amount_currency']"
                                            t-options="{'widget': 'monetary', 'display_currency': currency}"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                    </td>
                </tr>
            </xpath>
            <xpath expr="//div[@id='total']" position="replace"/>


<!--            <xpath expr="//thead/tr/th[@name='th_taxes']" position="before">-->
<!--                <th name="th_expiry_date" class="text-end text-nowrap">Expiry Date</th>-->
<!--            </xpath>-->
<!--            <xpath expr="//td[@name='td_taxes']" position="before">-->
<!--                <t t-set="exp" t-value="line.get_expiry_date()"/>-->
