<!--                <td name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">-->
<!--                    <span class="text-nowrap" t-field="line.product_id.base_unit_price">9.00</span>-->
<!--                </td>-->
<!--            </xpath>-->

            <xpath expr="//div[@id='payment_term']" position="replace">
<!--                <h1></h1>-->
                <p class="mx-auto" style="page-break-inside: avoid;">
                    Received by:                 <br/>
                    Name:                        <br/>
                    Sign:                        <br/>
                    Date:                        <br/>
                    "I/We acknowledge full receipt of the goods described in this copy of our customer invoice and agree to abide by the terms and conditions of supply by Bayani Imports Pty Ltd on website (https://bayani.com.au/terms)."
                </p>
            </xpath>
        </template>
        <template id="account_report_invoice_document_custom" inherit_id="account_accountant.report_invoice_document">
            <xpath expr="//div[@t-if='o.show_signature_area']" position="replace">
                    <div t-if="o.show_signature_area" t-attf-class="#{'col-12' if report_type != 'html' else 'col-lg-5 offset-lg-7 col-md-12'}">
                        <t t-if="o.signature">
                            <img t-if="o.signature" t-att-src="image_data_uri(o.signature)" class="img-fluid mx-auto" style="max-height: 6rem;"/>
                        </t>
                        <t t-else="">
                            <!-- leave an empty space allowing to sign the invoice manually -->
                            <div class="col-12" style="min-height: 10rem"/>
                        </t>
                        <!-- wkhtmltopdf doesn't render a simple `border-top border-dark` -->
                        <p>
                        </p>
                    </div>
            </xpath>
        </template>


        <!--        SALE ORDER-->
        <template id="report_saleorder_document_custom" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-set='address']" position="replace">
                 <t t-set="address">
                     <t t-if="doc.partner_shipping_id == doc.partner_invoice_id == doc.partner_id">
                        <strong>Deliver To:</strong>
                    </t>
                    <div t-field="doc.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <p t-if="doc.partner_id.vat">
                        <t t-if="doc.company_id.account_fiscal_country_id.vat_label" t-out="doc.company_id.account_fiscal_country_id.vat_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="doc.partner_id.vat"/>
                    </p>
                </t>
            </xpath>
            <xpath expr="//t[@t-set='information_block']" position="replace">
                <t t-set="information_block">
                    <strong>
                        <t t-if="doc.partner_shipping_id == doc.partner_invoice_id">
                            Invoice and Deliver To:
                        </t>
                        <t t-else="">
                            Invoice To:
                        </t>
                    </strong>
                    <div t-field="doc.partner_invoice_id"
                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                        <strong>Deliver To:</strong>
                        <div t-field="doc.partner_shipping_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </t>
                </t>
            </xpath>
            <xpath expr="//tbody" position="before">
                <t t-set="counter" t-value="doc.check_font_limit()"/>
            </xpath>
            <xpath expr="//t[@t-set='lines_to_report']" position="after">
                <t t-set="lines_to_report" t-value="doc.reorder_lines(lines_to_report)"/>
            </xpath>
            <xpath expr="//thead" position="replace">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_description" class="text-start">Description</th>
                        <th name="th_expiry_date" class="text-end text-nowrap">Expiry Date</th>
                        <th name="th_quantity" class="text-end text-nowrap">Quantity</th>
                        <th name="th_priceunit" class="text-end text-nowrap">Unit Price</th>
                        <th name="th_box_price" class="text-end text-nowrap">Box Price</th>
                        <th name="th_discount" t-if="display_discount" class="text-end">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_taxes" class="text-end">Taxes</th>
                        <th name="th_subtotal" class="text-end">
                            <span>Amount</span>
                        </th>
                    </tr>
                </thead>
            </xpath>
            <xpath expr="//t[@t-foreach='lines_to_report']/tr[1]" position="replace">
                <tr
                    t-att-class="'fw-bold o_line_section' if (
                        line.display_type == 'line_section'
                        or line.product_type == 'combo'
                    )
                    else 'fst-italic o_line_note' if line.display_type == 'line_note'
                    else ''"
                >
                    <t t-if="not line.display_type and line.product_type != 'combo'">
                        <td name="td_name">
                            <t t-if="counter > 0">
                                <span t-field="line.name" style="font-size:12px;">Bacon Burger</span>
                            </t>
                            <t t-else="">
                                <span t-field="line.name">Bacon Burger</span>
                            </t>
                        </td>

                        <t t-set="exp" t-value="line.get_saleline_expiry_date()"/>
                        <td name="td_expiry_date" class="text-end">
                            <t t-if="counter > 0">
                                <span t-esc="exp" style="font-size:12px;" t-options='{"widget": "date"}'>-</span>
                            </t>
                            <t t-else="">
                                <span t-esc="exp" t-options='{"widget": "date"}'>-</span>
                            </t>
                        </td>

                        <td name="td_quantity" t-attf-class="text-end {{ 'text-nowrap' if (not line.product_packaging_id or len(line.product_packaging_id.name) &lt; 10) else '' }}">
                            <t t-if="counter > 0">
                                <span t-field="line.product_uom_qty" style="font-size:12px;">3</span>
                                <span t-field="line.product_uom" style="font-size:12px;">units</span>
                                <span t-if="line.product_packaging_id" style="font-size:12px;">
                                    (<span t-field="line.product_packaging_qty" style="font-size:12px;" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/> <span t-field="line.product_packaging_id" style="font-size:12px;"/>)
                                </span>
                            </t>
                            <t t-else="">
                                <span t-field="line.product_uom_qty">3</span>
                                <span t-field="line.product_uom">units</span>
                                <span t-if="line.product_packaging_id">
                                    (<span t-field="line.product_packaging_qty" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/> <span t-field="line.product_packaging_id"/>)
                                </span>
                            </t>
                        </td>

                        <td name="td_priceunit" class="text-end text-nowrap">
                            <t t-if="counter > 0">
                                <span t-field="line.product_id.base_unit_price" style="font-size:12px;">3</span>
                            </t>
                            <t t-else="">
                                <span t-field="line.product_id.base_unit_price">3</span>
                            </t>
                        </td>

                        <t t-set="t" t-value="round(line.price_unit * line.product_uom_qty,2)"/>
                        <td name="td_box_price" t-attf-class="text-end">
                            <t t-if="counter > 0">
                                <span class="text-nowrap" t-field="line.price_unit" style="font-size:12px;">9.00</span>
                            </t>
                            <t t-else="">
                                <span class="text-nowrap" t-field="line.price_unit">9.00</span>
                            </t>
                        </td>

                        <td t-if="display_discount" class="text-end">
                            <t t-if="counter > 0">
                                <span t-field="line.discount" style="font-size:12px;">-</span>
                            </t>
                            <t t-else="">
                                <span t-field="line.discount">-</span>
                            </t>
                        </td>

                        <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_id])"/>
                        <td name="td_taxes" t-attf-class="text-end {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                            <t t-if="counter > 0">
                                <span t-out="taxes" style="font-size:12px;">Tax 15%</span>
                            </t>
                            <t t-else="">
                                <span t-out="taxes">Tax 15%</span>
                            </t>
                        </td>
                        <td t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                            <t t-if="counter > 0">
                                <span t-field="line.price_subtotal" style="font-size:12px;">27.00</span>
                            </t>
                            <t t-else="">
                                <span t-field="line.price_subtotal">27.00</span>
                            </t>
                        </td>
